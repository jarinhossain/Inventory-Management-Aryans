@model List<InventoryManagementV1.Models.SizeGroup>
@{
    Layout = "~/Views/Shared/layout.cshtml";
}

<!DOCTYPE html>
<div class="content">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Data Tables
        </h1>

    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-12">

                <!-- /.box -->

                <div class="box">
                    <div class="box-header">
                        <div class="col-md-11 box-header">
                            <h3 class="box-title">Size Group List</h3>
                        </div>

                        <div class="col-md-1">
                            <a href="~/SizeGroup/Create" class="btn btn-primary btn-sm">Add</a>
                        </div>

                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr class="info">
                                    <th>Size Group Range</th>
                                    <th>Option</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (InventoryManagementV1.Models.SizeGroup size in (IEnumerable<InventoryManagementV1.Models.SizeGroup>)Model)
                                {
                                    <tr>
                                        <td>@size.Size_Group_Range</td>
                                        <td><a href="~/SizeGroup/Edit?id=@size.Id" class="btn btn-primary btn-sm" >Edit</a></td>

                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>

</div>


@section scripts{
    <!-- DataTables -->
    <script src="~/layouts/adminTemplate/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/layouts/adminTemplate/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/layouts/adminTemplate/bower_components/jquery-slimscroll/jquery.slimscroll.min.js"></script>


    <!-- page script -->
    <script>

    $('#example1').DataTable()


    </script>

}




