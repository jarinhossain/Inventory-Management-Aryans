@model InventoryManagementV1.Models.Category
@{
    Layout = "~/Views/Shared/layout.cshtml";
}

<!DOCTYPE html>
<section class="content-header"></section>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Category Edit</h3>
                </div>
                <!-- /.box-header -->

                @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="box-body">
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group">
                            <label class="control-label col-md-3">Category Name</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Category_Name, new { @Class = "form-control", @placeholder = "Category Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3"></div>
                            <div class="col-md-5">
                                <input type="submit" value="Edit" class="btn btn-info" />
                            </div>

                        </div>
                    </div>
                }


            </div>

            <!-- /.box -->

        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
@section scripts{

    <script>
        $(document).ready(function () {
            $("form").submit(function (event) {
                if ($("#Category_Name").val() == "") {
                    event.preventDefault();
                    swal("Failed", "Category Name is required", "error").then(function () {
                        $("#Category_Name").focus();
                    });
                }

                else {
                    event.preventDefault();
                    $.ajax({
                        url: "/Category/Edit",
                        type: "POST",
                        data:
                       {
                           Id: $("#Id").val(),
                           Category_Name: $("#Category_Name").val()
                       },
                        success: function (data) {
                            if (data == "true")
                            {
                                swal("Success", "Successfully Updated", "success").then(function () {
                                    resetfunction();
                                    document.location = '/Category/List';
                                })
                            }
                            else
                                swal("Failed", data, "error");
                                
                        },
                        error: function (data) {
                            alert(data)
                        },

                    })
                }

            });
            function resetfunction() {
                $("#Category_Name").val("")
            }
        });
    </script>
}