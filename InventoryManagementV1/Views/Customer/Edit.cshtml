@model InventoryManagementV1.Models.Customer
@{
    Layout = "~/Views/Shared/layout.cshtml";
}

<!DOCTYPE html>
<section class="content-header"></section>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Customer Edit</h3>
                </div>
                <!-- /.box-header -->

                @using (Html.BeginForm("Edit", "Customer", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="box-body">
                        @Html.HiddenFor(m => m.Id)
                        <div class="form-group">
                            <label class="control-label col-md-3">Customer Name</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Customer_Name, new { @Class = "form-control", @placeholder = "Customer Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Mobile1</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Mobile1, new { @Class = "form-control", @placeholder = "Mobile1" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Mobile2</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Mobile2, new { @Class = "form-control", @placeholder = "Mobile2" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Gender</label>
                            <div class="col-md-6">
                                @Html.DropDownList("Gender_Id", (List<SelectListItem>)ViewData["GenderList"], "Select Gender", new { @class = "form-control editor-field", @placeholder = "Select" })
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Address</label>
                            <div class="col-md-6">
                                @Html.TextAreaFor(m => m.Address, new { @Class = "form-control", @placeholder = "Address" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Guarantor Name</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Guarantor_Name, new { @Class = "form-control", @placeholder = "Guarantor Name" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Guarantor Mobile</label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Guarantor_Mobile, new { @Class = "form-control", @placeholder = "Guarantor Mobile" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Guarantor Address</label>
                            <div class="col-md-6">
                                @Html.TextAreaFor(m => m.Guarantor_Address, new { @Class = "form-control", @placeholder = "Guarantor" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-3"></div>
                            <div class="col-md-5">
                                <input type="submit" value="Edit" class="btn btn-info" />
                            </div>
                        </div>
                    </div>
                }


            </div>

            <!-- /.box -->

        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</section>
@section scripts{

    <script>
        $(document).ready(function () {
            $("form").submit(function (event) {
                if ($("#Customer_Name").val() == "") {
                    event.preventDefault();
                    swal("Failed", "Customer Name is required", "error").then(function () {
                        $("#Customer_Name").focus();
                    });
                }
                else if ($("#Mobile1").val() == "") {
                    event.preventDefault();
                    swal("Failed", "Mobile1 is required", "error").then(function () {
                        $("#Mobile1").focus();
                    });
                }
                else if ($("#Mobile2").val() == "") {
                    event.preventDefault();
                    swal("Failed", "Mobile2 is required", "error").then(function () {
                        $("#Mobile2").focus();
                    });
                }
                else if ($("#Gender_Id").val() == "") {
                    event.preventDefault();
                    swal("Failed", "Gender_Id is required", "error").then(function () {
                        $("#Gender_Id").focus();
                    });
                }
                else if ($("#Address").val() == "") {
                    event.preventDefault();
                    swal("Failed", "Address is required", "error").then(function () {
                        $("#Address").focus();
                    });
                }
                else if ($("#Guarantor_Name").val() == "") {
                    event.preventDefault();
                    swal("Failed", "Guarantor Name is required", "error").then(function () {
                        $("#Guarantor_Name").focus();
                    });
                }
                else if ($("#Guarantor_Mobile").val() == "") {
                    event.preventDefault();
                    swal("Failed", "Guarantor Mobile is required", "error").then(function () {
                        $("#Guarantor_Mobile").focus();
                    });
                }
                else if ($("#Guarantor_Address").val() == "") {
                    event.preventDefault();
                    swal("Failed", "Guarantor Address is required", "error").then(function () {
                        $("#Guarantor_Address").focus();
                    });
                }
                else {
                    event.preventDefault();
                    $.ajax({
                        url: "/Customer/Edit",
                        type: "POST",
                        data:
                       {
                           Id: $("#Id").val(),
                           Customer_Name: $("#Customer_Name").val(),
                           Mobile1: $("#Mobile1").val(),
                           Mobile2: $("#Mobile2").val(),
                           Gender_Id: $("#Gender_Id").val(),
                           Address: $("#Address").val(),
                           Guarantor_Name: $("#Guarantor_Name").val(),
                           Guarantor_Mobile: $("#Guarantor_Mobile").val(),
                           Guarantor_Address: $("#Guarantor_Address").val()

                       },
                        success: function (data) {
                            if (data == "true")
                                swal("Success", "Successfully Updated", "success");
                            else
                                swal("Failed", data, "error");
                            resetfunction();
                        },
                        error: function (data) {
                            alert(data)
                        },

                    })
                }

            });
            function resetfunction() {
                $("#Customer_Name").val("");
                $("#Mobile1").val("");
                $("#Mobile2").val("");
                $("#Gender_Id").val("");
                $("#Address").val("");
                $("#Guarantor_Name").val("");
                $("#Guarantor_Mobile").val("");
                $("#Guarantor_Address").val("")
            }
            $("#reset").click(function () {
                resetFunction();
            });
        });
</script>
}