
@model InventoryManagementV1.Models.Order
@{
    Layout = "~/Views/Shared/layout.cshtml";

}

<!DOCTYPE html>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border text-center">
                    <h3 class="box-title">Order Details</h3>
                </div>
                <!-- /.box-header -->


                <div class="box-body">
                    <div class="box-header">
                        <h3 class="box-title"><b>Basic Information</b></h3>
                        <hr />
                    </div>
                    <table class="table table-hover table-fixed">
                        <tbody>

                            <tr class="active">
                                <td class="text-primary text-right" width="30%"> Order Date: </td>
                                <td style="font-weight:bold">@Model.Order_Date</td>
                            </tr>
                          
                            <tr class="active">
                                <td class="text-primary text-right" width="30%">Customer Name: </td>
                                <td style="font-weight:bold">
                                    @if (@Model.Customer_Id != null)
                                    {
                                        @Model.Customer.Customer_Name
                                    }
                                </td>
                            </tr>
                         
                        </tbody>
                    </table>
                    <div class="form-group"> </div>
                    <div class="box-header">
                        <h3 class="box-title"><b>Stock Details</b></h3>
                        <hr />
                    </div>
                    <table id="productQuantityTable" class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr class="info">
                                <th>Material</th>
                                <th>Category</th>
                                <th>Size Group</th>
                                <th>Color</th>
                                <th>Purchase Price</th>
                                <th>Purchase Price</th>
                                <th>Quantity</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (InventoryManagementV1.Models.OrderDetail orderdetails in (IEnumerable<InventoryManagementV1.Models.OrderDetail>)Model.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        @if (@orderdetails.Product_Quantity_Id != null &&                       @orderdetails.ProductQuantityMap.Material_Id != null)
                                        {
                                           
                                            @orderdetails.ProductQuantityMap.Material.Material_Name
                                        }
                                    </td>
                                    <td>
                                        @if (@orderdetails.Product_Quantity_Id != null && @orderdetails.ProductQuantityMap.Category_Id != null)
                                        {

                                            @orderdetails.ProductQuantityMap.Category.Category_Name

                                        }
                                    </td>
                                    <td>
                                        @if (@orderdetails.Product_Quantity_Id != null && @orderdetails.ProductQuantityMap.Size_Group_Id != null)
                                        {

                                            @orderdetails.ProductQuantityMap.SizeGroup.Size_Group_Range

                                        }
                                    </td>
                                    <td>
                                        @if (@orderdetails.Product_Quantity_Id != null && @orderdetails.ProductQuantityMap.Color_Id != null)
                                        {

                                            @orderdetails.ProductQuantityMap.Color.Color_Name

                                        }
                                    </td>
                                    <td>@orderdetails.Purchase_Price</td>
                                    <td>@orderdetails.Sold_Price</td>
                                    <td>@orderdetails.Quantity</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>

            </div>

            <!-- /.box -->

        </div>
        <!--/.col (left) -->

    </div>
    <!-- /.row -->
</section>


