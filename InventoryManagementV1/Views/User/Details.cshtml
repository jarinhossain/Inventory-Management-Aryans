
@model InventoryManagementV1.Models.User
@{
    Layout = "~/Views/Shared/layout.cshtml";

}

<!DOCTYPE html>
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-8">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border text-center">
                    <h3 class="box-title">User Details</h3>
                </div>
                <!-- /.box-header -->


                <div class="box-body">
                    <table class="table table-hover table-fixed">
                        <tbody>

                            <tr class="active">
                                <td class="text-primary text-right" width="30%">User Name: </td>
                                <td style="font-weight:bold">@Model.User_Name</td>
                            </tr>
                            <tr class="active">
                                <td class="text-primary text-right" width="30%">Mobile No: </td>
                                <td style="font-weight:bold">@Model.Mobile_No</td>
                            </tr>
                            <tr class="active">
                                <td class="text-primary text-right" width="30%">Email: </td>
                                <td style="font-weight:bold">@Model.Email</td>
                            </tr>
                            <tr class="active">
                                <td class="text-primary text-right" width="30%">Address: </td>
                                <td style="font-weight:bold">@Model.Address</td>
                            </tr>
                            <tr class="active">
                                <td class="text-primary text-right" width="30%">Job: </td>
                                <td style="font-weight:bold">
                                    @if (@Model.Job_Id != null)
                                    {
                                        @Model.Job.Job_Title
                                    }
                                </td>
                            </tr>
                          
                        </tbody>
                    </table>


                </div>

            </div>

            <!-- /.box -->

        </div>
        <!--/.col (left) -->

    </div>
    <!-- /.row -->
</section>


